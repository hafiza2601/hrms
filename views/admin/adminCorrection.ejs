<%- include('../adminPartial/adminDashboard') %>


<div id="wrapper">
    <div class="col-md-12">
        <div class="card social">
            <div class="profile-header d-flex justify-content-between justify-content-center">
                <h1>Attendance Correction</h1>

            </div>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">

                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover js-basic-example dataTable table-custom spacing5">
                                <thead>
                                    <tr>
                                        <th>Employe Code</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Check In</th>
                                        <th>Check Out</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Aprrove/Reject</th>


                                    </tr>
                                </thead>

                                <tbody>
                                    <% for(let user of users){ %>
                                    <tr>
                                        <td><%= user.employe.username %> </td>
                                        <td><%= user.employe.firstName %></td>
                                        <td><%= user.date %> </td>
                                        <td><%= user.checkIn %> </td>
                                        <td><%= user.checkOut %> </td>
                                        <td><%= user.reason %> </td>
                                        <td><%= user.status %> </td>
                                        <td>

                                            <div style="width:280px;">
                                                <div style="float: left; width: 50x">
                                                    <form
                                                        action="/adminAttendanceapprove?id=<%= user.employe._id %>&_method=PUT"
                                                        method="POST">
                                                        <button class="btn btn-primary" type="submit">Approve</button>
                                                    </form>
                                                </div>
                                                <div style="float: right; width: 190px">
                                                    <form
                                                        action="/adminAttendancereject?id=<%= user.employe._id %>&_method=PUT"
                                                        method="POST">
                                                        <button class="btn btn-danger" type="submit">Reject</button>
                                                    </form>
                                                </div>
                                            </div>

                                        </td>

                                    </tr>
                                    <% } %>

                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Employe Code</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Check In</th>
                                        <th>Check Out</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Aprrove/Reject</th>
                                    </tr>
                                </tfoot>

                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

</div>
<%- include('../adminPartial/adminDashend') %>